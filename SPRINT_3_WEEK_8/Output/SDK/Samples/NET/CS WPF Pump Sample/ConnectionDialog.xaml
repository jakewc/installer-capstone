<Window x:Class="ITL.Enabler.Samples.ConnectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ConnectionDialog" Height="144" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Name="Label_text" FontSize="18" HorizontalContentAlignment="Center" >Enabler offline .. Reconnecting</Label>
        <Label Name="Label_status" FontSize="14" HorizontalContentAlignment="Center" Grid.Row="1" Margin="0,0,0,9">Please wait</Label>
        <Button Margin="140,0,128,3" Name="button_cancel" IsDefault="True" Click="button_cancel_Click" Height="29" VerticalAlignment="Bottom" Grid.Row="2">Cancel</Button>
    </Grid>
</Window>
