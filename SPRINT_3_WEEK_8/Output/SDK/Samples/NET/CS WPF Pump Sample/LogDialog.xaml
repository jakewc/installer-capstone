<Window x:Class="ITL.Enabler.Samples.LogDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Event logging" Height="455" Width="394" Unloaded="Window_Unloaded" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" Height="22" Name="menu1" VerticalAlignment="Top" IsMainMenu="True" OverridesDefaultStyle="False">
            <MenuItem Header="Copy selected" Name="Menu_Copy" Click="Menu_Copy_Click" IsChecked="False" BorderThickness="0" Padding="7,2,8,3"></MenuItem>
            <MenuItem Header="Clear" Name="Menu_Clear" Click="Menu_Clear_Click" BorderThickness="0" Padding="7,2,8,3"></MenuItem>
            <MenuItem Header="Show Latest" Name="Menu_Latest" Click="Menu_Latest_Click" IsCheckable="True" IsChecked="True" Padding="7,2,8,3"></MenuItem>
            <MenuItem Header="Show Running totals" Name="Menu_Totals" Click="Menu_Totals_Click" IsCheckable="True" IsChecked="False" Padding="7,2,8,3"></MenuItem>
        </Menu>
        <TextBox Grid.Row="1" Name="TextBox_log" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" />
    </Grid>
</Window>
