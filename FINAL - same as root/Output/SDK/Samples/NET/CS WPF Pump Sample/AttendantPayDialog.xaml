<Window x:Class="ITL.Enabler.Samples.AttendantPayDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Attendant Pay" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        
        <Label Content="Payment Type ID:" Grid.Row="0" VerticalAlignment="Center" Margin="20,0,0,0" />
        <Label Content="Update Float:" Grid.Row="1" VerticalAlignment="Center" Margin="20,0,0,0" />
        
        <TextBox Name="txt_PaymentTypeID" Grid.Column="1" Grid.Row="0" Text="0" VerticalAlignment="Center" Margin="0,0,20,0" />
        <CheckBox Name="ckb_UpdateFLoat" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,20,5" IsChecked="True" />
        
        <Button Name="Button_Cancel" Content="Cancel" Grid.Column="0" Grid.Row="2" Margin="10" IsCancel="True"/>
        <Button Name="Button_Attendant_Pay" Content="Pay" Grid.Column="1" Grid.Row="2" Margin="10" Click="Button_Pay_Clicked"/>
    </Grid>
</Window>
