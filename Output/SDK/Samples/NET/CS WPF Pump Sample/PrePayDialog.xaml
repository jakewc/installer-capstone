<Window x:Class="ITL.Enabler.Samples.PrePayDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PrePay Authorisation" Height="202" Width="317" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" BorderBrush="Black" BorderThickness="2" WindowStyle="None">
    <Canvas>
        <GroupBox Header="Limit"  Name="groupBox_limit" Height="101" Canvas.Left="186" Canvas.Top="10" Width="93">
            <Canvas>
                <Label Height="27" Name="radio_money" Width="76.398" Canvas.Left="6" Canvas.Top="11" >Money</Label>
                <TextBox Width="69.258" Canvas.Left="7.14" Height="19" Canvas.Top="33" Name="textbox_limit">10</TextBox>
            </Canvas>
        </GroupBox>
        <Button Height="23"  Name="button_cancel" VerticalAlignment="Bottom" IsCancel="True" Canvas.Left="210" Canvas.Top="124" Width="70" Click="Button_Cancel_Click">Cancel</Button>
        <Button Height="23"  Name="button_ok" VerticalAlignment="Bottom" IsDefault="True" HorizontalAlignment="Left" Width="76" Canvas.Left="128" Canvas.Top="124" Click="Button_Ok_Click">Ok</Button>
        <GroupBox Header="Allowed products"  Name="groupBox_products" HorizontalAlignment="Left" Width="154" Height="100" Canvas.Left="14" Canvas.Top="10">
            <Grid>
                <ListBox Name="Listbox_products" />
            </Grid>
        </GroupBox>
    </Canvas>
</Window>
