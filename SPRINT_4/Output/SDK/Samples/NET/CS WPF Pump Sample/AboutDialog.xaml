<Window x:Class="ITL.Enabler.Samples.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="About Pump Demo WPF" Height="201" Width="349" ResizeMode="NoResize" Icon="/PumpDemoWPF;component/Images/Pumpdemo.ico" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <BitmapImage x:Key="Logo" UriSource="Images/ITLLogo1.png" />
    </Window.Resources>
    <Grid Height="156">
        <Image Source="{StaticResource Logo}" Margin="38,51,0,0" HorizontalAlignment="Left" Width="72" Stretch="None" Height="54" VerticalAlignment="Top"></Image>
        <TextBlock Margin="130,31,29,51" Name="textBlock_detail" Text="This application demonstrates the use of the Enabler API and our WPF GUI controls in a WPF application. " TextWrapping="Wrap" TextAlignment="Left" />
        <TextBlock Height="35" Margin="12,-2,12,0" Name="textBlock_title" VerticalAlignment="Top" Text="Pump Demo  Sample Application" FontSize="20" TextAlignment="Center" TextDecorations="None"></TextBlock>
        <TextBlock Margin="130,0,78,28" Name="textBlock_version" Text="Version : 1.0.0.0" Height="17" VerticalAlignment="Bottom" />
    </Grid>
</Window>
